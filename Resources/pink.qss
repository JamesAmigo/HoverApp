/* ===============================
   üîÖ Base Theme
   =============================== */

QWidget {
    background-color: #ffdbdd;
    color: #2b2b2b;
}

/* ===============================
   üìã Input Fields & Selectors
   =============================== */

QLineEdit,
QComboBox,
QListWidget {
    background-color: #fff7f7;
    border: 1px solid #ffbcbc;
    padding: 4px;
}
/* ===============================
   üî≤ Tabs
   =============================== */
QTabWidget::pane {
    border: 1px solid #ffbcbc;
    padding: 5px;
}
QTabBar::tab {
    background-color: #ffa6a6;
    color: #333;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    padding: 6px 12px;
}
QTabBar::tab:selected {
    background-color: #ffbcbc;
    color: #222;
    font-weight: bold;
}
QTabBar::tab:hover {
    background-color: #ffffc4c4;
    color: #222;
}

/* ===============================
   üîò Buttons (Default)
   =============================== */

QPushButton {
    background-color: #ffbcbc;
    color: #222;
    font-family: "Segoe UI Emoji";
    border-radius: 6px;
    padding: 6px 12px;
}

QPushButton:hover {
    background-color: #ffffc4c4;
}

QPushButton:pressed {
    background-color: #ffa6a6;
}
/* ===============================
   üåô Theme Toggle Button (Dark Style)
   =============================== */

QPushButton[role="ThemeSwitch"] {
    background-color: #444;
    color: white;
    border-radius: 6px;
    padding: 6px 12px;
}

QPushButton[role="ThemeSwitch"]:hover {
    background-color: #555;
}

QPushButton[role="ThemeSwitch"]:pressed {
    background-color: #333;
}

/* ===============================
   üñ± Scrollbars
   =============================== */

QScrollBar:vertical {
    background: #ffbcbc;
    width: 10px;
}

/* ===============================
   üè∑ Result Dialog Labels
   =============================== */

/* Result Dialog Columns */
QLabel[role="key"][status="normal"] {
    font-weight: bold;
    font-size: 10pt;
    border: 1px solid #ff9f9f;
    padding: 4px;
    border-radius: 6px;
    background-color: #ffbcbc;
}

/* Result Dialog Columns that is not chosen (Hidden) */
QLabel[role="key"][status="hidden"] {
    font-weight: bold;
    font-size: 10pt;
    border: 1px solid #ff9f9f;
    color: #bb7979;
    background-color: transparent;
    padding: 4px;
    border-radius: 6px;
}

/* Result Dialog Columns with empty value */
QLabel[role="key"][status="empty"] {
    font-weight: bold;
    font-size: 10pt;
    border: 1px solid #ff9f9f;
    color: white;
    background-color: #857474;
    padding: 4px;
    border-radius: 6px;
}

/* Result Dialog Values */
QLabel[role="value"] {
    font-size: 8pt;
    padding: 4px;
}
