/* ===============================
   üåô Base Theme
   =============================== */

QWidget {
    background-color: #2b2b2b;
    color: #f0f0f0;
}

/* ===============================
   üìã Input Fields & Selectors
   =============================== */

QLineEdit,
QComboBox,
QListWidget {
    background-color: #3c3c3c;
    border: 1px solid #444;
    padding: 4px;
}
/* ===============================
   üî≤ Tabs
   =============================== */
QTabWidget::pane {
    border: 1px solid #444;
    padding: 5px;
}
QTabBar::tab {
    background-color: #333;
    color: #aaa;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    padding: 6px 12px;
}
QTabBar::tab:selected {
    background-color: #444;
    color: #fff;
    font-weight: bold;
}
QTabBar::tab:hover {
    background-color: #555;
    color: #fff;
}

/* ===============================
   üîò Buttons (Default)
   =============================== */

QPushButton {
    background-color: #444;
    color: white;
    border-radius: 6px;
    padding: 6px 12px;
}

QPushButton:hover {
    background-color: #555;
}

QPushButton:pressed {
    background-color: #333;
}


/* ===============================
   üîÖ Theme Toggle Button (Light Style)
   =============================== */

QPushButton[role="ThemeSwitch"] {
    background-color: #eeeeee;
    color: #222;
    border-radius: 6px;
    padding: 6px 12px;
}

QPushButton[role="ThemeSwitch"]:hover {
    background-color: #dddddd;
}

QPushButton[role="ThemeSwitch"]:pressed {
    background-color: #bbbbbb;
}
/* ===============================
   üñ± Scrollbars
   =============================== */

QScrollBar:vertical {
    background: #2b2b2b;
    width: 10px;
}

/* ===============================
   üè∑ Result Dialog Labels
   =============================== */

/* Result Dialog Columns */
QLabel[role="key"][status="normal"] {
    font-weight: bold;
    font-size: 10pt;
    border: 1px solid #ccc;
    padding: 4px;
    border-radius: 6px;
    background-color: #3c3c3c;
}

/* Result Dialog Columns that is not chosen (Hidden) */
QLabel[role="key"][status="hidden"] {
    font-weight: bold;
    font-size: 10pt;
    border: 1px solid #ccc;
    color: gray;
    background-color: transparent;
    padding: 4px;
    border-radius: 6px;
}

/* Result Dialog Columns with empty value */
QLabel[role="key"][status="empty"] {
    font-weight: bold;
    font-size: 10pt;
    border: 1px solid #ccc;
    color: white;
    background-color: #252525;
    padding: 4px;
    border-radius: 6px;
}

/* Result Dialog Values */
QLabel[role="value"] {
    font-size: 8pt;
    padding: 4px;
}
